#!/bin/bash

# When all of the Protractor suites are run in one go, Selenium often crashes, probably due to the
# length of the test suite. Running each suite individually and restarting Selenium between each
# reduces the change of Selenium crashing.

echo 'Running admin suite'
node_modules/protractor/bin/protractor etc/protractor.js --suite admin
echo 'Running authentication suite'
node_modules/protractor/bin/protractor etc/protractor.js --suite authentication
echo 'Running customer suite'
node_modules/protractor/bin/protractor etc/protractor.js --suite customer
echo 'Running general suite'
node_modules/protractor/bin/protractor etc/protractor.js --suite general
echo 'Running user suite'
node_modules/protractor/bin/protractor etc/protractor.js --suite user
echo 'Running vendor suite'
node_modules/protractor/bin/protractor etc/protractor.js --suite vendor
