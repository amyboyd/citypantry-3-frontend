{% extends 'base.html.twig' %}

{% block title %}My password | City Pantry{% endblock %}

{% block body %}
    <div class="vendor-signup-header"></div>

    <main role="main">
        <div class="wrapper">
            <div class="row">
                <div class="col-sm-8">
                    <h1>My details</h1>

                    <h2>Password</h2>

                    <form>
                        <fieldset>
                            <div class="form-group">
                                <label for="current">Current Password</label>
                                <input class="form-control input-lg" id="current" name="current" type="password" required="" aria-required="true">
                            </div>

                            <div class="form-group">
                                <label for="new">New Password</label>
                                <input class="form-control input-lg" id="new" name="new" type="password" required="" aria-required="true">
                            </div>

                            <div class="form-group">
                                <label for="confirm">Confirm Password</label>
                                <input class="form-control input-lg" id="confirm" name="confirm" type="password" required="" aria-required="true">
                            </div>

                            <input class="btn btn-primary btn-lg" type="submit" value="Save changes">
                        </fieldset>
                    </form>
                </div>

                {% include 'sidebar/4.html.twig' with {page: 'password'} %}
            </div>
        </div>
    </main>
{% endblock %}
