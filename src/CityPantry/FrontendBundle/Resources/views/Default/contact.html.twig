{% extends 'base.html.twig' %}

{% block title %}Contact | City Pantry{% endblock %}

{% block body %}
    <div class="contact-header"></div>

    <main role="main" ng-controller="ContactController as contact">
        <div class="wrapper">
            <div class="row">
                <div class="col-sm-8">
                    <h1>Contact us</h1>

                    <p class="lead"><strong>We love to hear from you</strong> &#8211; please choose how we can help you today&#8230;</p>

                    <p>to view or change your <strong>order details</strong>, please visit <a href="/customer/orders">your orders page</a></p>

                    <p>if you have a <strong>question about an order</strong> you have placed, you can contact the vendor directly on <a href="/customer/orders">your orders page</a></p>

                    <p>if your package hasn&#8217;t arrived yet, please call us on <a href="tel:{{ phoneNumberInternational }}">{{ phoneNumberUk }}</a></p>

                    <p>if you have <strong>any other queries</strong>, <a ng-click="contact.showModal()">send us an email</a></p>

                    <div class="modal" id="contact-modal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form role="form" ng-submit="contact.submit()" id="contact-form">
                                    <div class="modal-header">
                                        <button class="close" type="button" aria-hidden="true" ng-click="contact.hideModal()">&times;</button>

                                        <h2 class="modal-title">Send us an email</h2>

                                        <p>Feel free to email us at <a href="mailto:support@citypantry.com">support@citypantry.com</a></p>
                                    </div>

                                    <div class="modal-body">
                                        <fieldset>
                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input class="form-control input-lg" name="name" id="name" type="text" required ng-model="contact.name" />
                                            </div>

                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input class="form-control input-lg" name="email" id="email" type="email" required ng-model="contact.email" />
                                            </div>

                                            <div class="form-group">
                                                <label for="message">Message</label>
                                                <textarea class="form-control input-lg" id="message" name="message" required placeholder="Include your phone number, and weâ€™ll call you." rows="6" ng-model="contact.message"></textarea>
                                            </div>
                                        </fieldset>
                                    </div>

                                    <div class="modal-footer">
                                        <input class="btn btn-primary btn-lg" name="submit" type="submit" value="Send">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div id="thanks-modal" class="modal">
                        <div class="modal-dialog">
                            <div class="modal-content" style="padding: 20px;">
                                <h1>Thanks!</h1>

                                <p>We&#8217;ll get back to you shortly. In the meantime, enjoy some
                                    fine reading over at <a href="{{ blogUrl }}">our blog</a> while
                                    you&#8217;re still here.</p>
                            </div>
                        </div>
                    </div>
                </div>

                {% include 'sidebar/1.html.twig' with {page: 'contact'} %}
            </div>
        </div>
    </main>
{% endblock %}
